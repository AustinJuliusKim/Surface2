<div class="jumbotron">
	<h1>Join Surface Today</h1>
	<p class="lead">and Start Connecting Immediately!</p>
	<%#= link_to "Log in!" class: "btn btn-success"  %>
</div>

<div class="container">
	<div class="col-md-3 col-md-offset-1">
		<form class="form-horizontal">
			<%= form_for @user do |f| %>
			<div class="form-group">
				<%= f.label :username %>
				<%= f.text_field :username, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :password_digest, "Password" %>
				<%= f.password_field :password_digest, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :first_name %>
				<%= f.text_field :first_name, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :last_name %>
				<%= f.text_field :last_name, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :email %>
				<%= f.text_field :email, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :age %>
				<%= f.number_field :age, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :gender %>
				<%= f.text_field :gender, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :looking_for %>
				<%= f.text_field :looking_for, class: "form-control"	 %>
			</div>

			<div class="form-group">
				<%= f.submit "Join now!", class: "btn btn-primary" %>
			</div>
		 	<div class="form-group">
				<%= link_to "Back to the list!", users_path, class: "btn btn-default" %>
			</div>
			<% end %>
		</form>
	
	<br>
	</div>
</div>