<div class="masthead">
	<h1>Edit this profile!</h1>
</div>
<hr>
<div class="container-fluid">
	<%= form_for @user do |f| %>
	<div class="col-md-3 col-md-offset-1">
		<form class="form-horizontal">
	
		<div class="form-group">
			<%= f.label :username %>
			<%= f.text_field :username, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :password %>
			<%= f.text_field :password, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :first_name %>
			<%= f.text_field :first_name, class: "form-control"%>
		</div>

		<div class="form-group">
			<%= f.label :last_name %>
			<%= f.text_field :last_name, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :email %>
			<%= f.text_field :email, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :age %>
			<%= f.number_field :age, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :gender %>
			<%= f.text_field :gender, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :looking_for %>
			<%= f.text_field :looking_for, class: "form-control" %>
		</div>
		<div class="form-group">
		<%= f.submit "Submit these changes!", class: "btn btn-success" %>
		</div>
		<div class="form-group">
			<%= link_to "Back to the list!", users_path, class: "btn btn-default" %>
		</div>
	</form>
	<% end %>

</div>
</div>